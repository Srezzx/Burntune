															<% }) %>
															<option selected="selected">purple</option>
															<option>Orange</option>
															<option>Red</option>
															<option>Yellow</option>
														</select> -->
														<!-- <input type="text" name="test" placeholder="test"> -->
														<select style="width:100%;" class="js-example-basic-single" name="stname_id" class="form-control">
															<option value="DIDNT SELECT" diabled selected="selected">Select an Option</option>
															<% allusers.forEach(function(user){ %>
																<option value="<%= user._id %>"><%= user.name %></option>
																<% }) %>
																
														</select>
														<button type="submit" style=" margin-top:10px;" class="btn btn-sm btn-success">Add</button>
													</form>
												</div>
											</div>
										<% } %>
									</div>
								</div>
							</div>
							<!-- END BORDERED TABLE -->
						</div>
