						<div class="col-md-12">
							<!-- BORDERED TABLE -->
							<div  style="border:none;background-color:#F3F5F8;" class="panel">
								<div class="panel-heading">
									<!-- <h3 class="panel-title">Bordered Table</h3> -->
								</div>
								<div class="panel-body">
									<div  class="row justify-content-center">
										<div class="col-sm-6">
											<div class="slotdetails">
												<label class="slotdetailslabel">Date</label>
												<div class="slotdetailsvalue"> <%= slot.date %></div>
											</div>
										</div>
										<div class="col-sm-6">
											<div class="slotdetails">
