											</div>
										</div>
										<div class="col-sm-6">
											<div class="slotdetails">
												<label class="slotdetailslabel">Instrument</label>
												<div class="slotdetailsvalue"><%= slot.instrument %></div>
											</div>
										</div>
										<div class="col-sm-6">
											<div class="slotdetails">
												<label class="slotdetailslabel">Students</label>
												<div class="slotdetailsvalue"><%= slot.limit %></div>
											</div>
										</div>
										<div class="col-sm-6">
											<div class="slotdetails">
												<label class="slotdetailslabel">Left</label>
												<div class="slotdetailsvalue"><%= slot.limit - slot.students.length %></div>
											</div>
										</div>
										<div class="col-sm-12">
											<div class="slotdetails">
												<label class="slotdetailslabel">List of Students - </label>
												<div class="row d-flex justify-content-center">
													<!-- <div style="padding-right:10rem;padding-left:4rem;"class="col-md-6">
														<p style="line-height:100px;display:inline;" class="slotdetailslabel">Sriesh Agrawal(static)</p>
														<span style="float:right"><a href="/slot/idk" class="btn btn-sm btn-danger">DELETE</a></span>
													</div> -->
													
													<% if(slot.students.length > 0) {slot.students.forEach(function(student){ %>
														<form action="/slot/remove/student/<%= student._id %>/<%= slot._id %>" method="POST">
														<div style="padding-right:10rem;padding-left:4rem;" class="d-flex col-md-6">
															<p style="line-height:40px;display:inline;" class="slotdetailslabel"><%= student.name %></p>
															<span style="float:right"><button type="submit" class="btn btn-sm btn-danger">DELETE</button></span>
														</div>
													</form>
													<% });} %>
												</div>
											</div>
										</div>
										<% if(slot.students.length <= slot.limit){ %>
											<div class="col-sm-12">
												<div class="slotdetails">
													<label class="slotdetailslabel">Add Student</label>
													<form action ="/slot/add/student/<%= slot._id %>" method="POST"name="selectnew" class="selectnew">
														<!-- <select name="mySelect2" id="mySelect2" class="form-control">
															<% allusers.forEach(function(user){ %>
