    <div class="content">
      <div class="container">
        <div
          class="signupcont d-flex align-items-center justify-content-center row"
        >
          <div class="col-md-6 col-xs-12 order-md-1">
            <img
              src="img/pictures/login6.png"
              alt="Image"
              class="signupimg img-fluid"
            />
          </div>
          <div
            style="display: block; width: 2000px"
            class="signinform col-md-6 no-gutters col-xs-12 contents order-md-2"
          >
          <%- include('errors') %>
            <div class="row justify-content-center">
              <div class="col-12">
                <div class="mb-4">
                  <h3
                    class="signup_h3"
                    style="color: #692d63; text-align: center"
                  >
                    SIGN UP
                  </h3>
                </div>

                <form
                  id="registerform"
                  name="registerform"
                  method="POST"
                  action="/register"
                >
                  <div class="form-group first">
                    <input
                      style="padding-left: 10px"
                      type="text"
                      class="form-control"
                      id="username"
                      placeholder="Username"
                      name="username"
                      value="<%= typeof username != 'undefined' ? username : '' %>"
                    />
                  </div>
                  <div class="form-group first">
                    <input
                      style="padding-left: 10px"
                      type="text"
                      class="form-control"
                      id="name"
                      placeholder="Name"
                      name="name"
                      value="<%= typeof name != 'undefined' ? name : '' %>"
                    />
                  </div>
                  <div class="form-group last mb-4">
                    <input
                      style="padding-left: 10px"
                      type="number"
                      class="form-control"
                      id="phno"
                      placeholder="Phone Number"
                      name="phno"
                      value="<%= typeof phno != 'undefined' ? phno : '' %>"
                    />
                  </div>
                  <div class="form-group last mb-4">
                    <input
                      style="padding-left: 10px"
                      type="email"
                      class="form-control"
                      id="email"
                      placeholder="Email"
                      name="email"
                      value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
                  </div>
                  <div class="form-group last mb-4">
                    <input
                      style="padding-left: 10px"
                      type="text"
                      class="form-control"
                      id="age"
                      placeholder="Age"
                      name="age"
                      value="<%= typeof age != 'undefined' ? age : '' %>"
                    />
                  </div>
                  <div class="form-group last mb-4">
                    <input
                      style="padding-left: 10px"
                      type="text"
                      class="form-control"
                      id="instrument"
                      placeholder="Instrument"
                      name="instrument"
                      value="<%= typeof instrument != 'undefined' ? instrument : '' %>"
                    />
                  </div>
                  <div class="form-group last mb-4">
                    <input
                      style="padding-left: 10px"
                      type="password"
                      class="form-control"
                      id="password"
                      placeholder="Password"
                      name="password"
                      value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                  </div>
                  <!-- <div class="d-flex mb-5 align-items-center">
                    <span class="mr-auto"
                      ><a
                        style="text-decoration: none"
                        href="#"
                        class="signup_a forgot-pass"
