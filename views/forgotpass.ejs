    <script>
      $("#forgotpassformfinal").submit(function (event) {
        var current_Date = new Date().getTime();
        var past_Date = document.getElementById("pasttime").innerHTML;
        past_Date = new Date(past_Date).getTime();
        var diff = (current_Date - past_Date) / 60000;
        event.preventDefault();
        $("#loader5").css("display", "block");
        var password = $("#forgotpassformfinal")
          .find('input[name="password1"]')
          .val();
        var confirmpassword = $("#forgotpassformfinal")
          .find('input[name="confirmpassword"]')
          .val();
        var user_id = document.getElementById("userid").innerHTML;
        console.log("confirm pass = " + confirmpassword);
        var fields = { password, confirmpassword, user_id };
        if (password === confirmpassword) {
          if (password.length > 6) {
            if (diff < 30) {
              $.ajax({
                url: "/forgotpassword/final",
                type: "POST",
                data: fields,
                success: function (result) {
                  console.log(result);
                  if (result.status === "Success") {
                    $("#alertmsg")[0].innerHTML = result.msg;
                    $("#alertmsg").css("color", "green");
                    $("#alertmsg").css("font-size", "110%");
                    $("#loader5").css("display", "none");
                    setTimeout(function () {
                      window.location = "/";
                    }, 1000);
                  } else if (result.status === "Error") {
                    $("#alertmsg")[0].innerHTML = result.msg;
                    $("#alertmsg").css("color", "red");
                    $("#alertmsg").css("font-size", "110%");
                    $("#loader5").css("display", "none");
                  }
                },
                error: function (err) {
                  // $("#login_modal_p")[0].innerHTML =
                  //   "An error has occoured, please try again in sometime";
                  // $("#login_modal_p").css("color", "red");
                  // $("#login_modal_p").css("font-size", "110%");
                  // $("#loader5").css("display", "none");
                },
              });
            } else {
              $("#alertmsg")[0].innerHTML =
                " Password reset timeout, please apply again";
              $("#alertmsg").css("color", "red");
              setTimeout(() => {
                window.location = "/";
              }, 1000);
            }
          } else {
            $("#alertmsg")[0].innerHTML =
              " Password should be of more than 6 characters";
            $("#alertmsg").css("color", "red");
          }
        } else {
          $("#alertmsg")[0].innerHTML = " Passwords don't match";
          $("#alertmsg").css("color", "red");
        }
      });
    </script>

